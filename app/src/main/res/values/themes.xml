<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_100</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>-->
        <!-- Customize your theme here. -->
        <item name="bottomAppBarStyle">@style/bottomBar</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="bottomBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:background">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="enforceMaterialTheme">false</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="android:background">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="roundedOutlinedText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/roundedShape</item>
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="materialThemeOverlay">@style/searchInputOverlay</item>
        <!--        <item name="hintTextAppearance">@style/colorTextInputLayout</item>-->
    </style>

    <style name="searchInputOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">?attr/colorSecondary</item>
<!--        <item name="editTextStyle">@style/roundedOutlinedText</item>-->
        <!--        <item name="enforceMaterialTheme">false</item>-->
    </style>

    <style name="roundedShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@android:color/holo_green_dark</item>
        <item name="colorSecondary">@android:color/holo_green_light</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter</item>
    </style>


</resources>
